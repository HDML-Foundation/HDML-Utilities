{
  "name": "@hdml/stringifier",
  "version": "0.0.2-alpha.5",
  "license": "Apache-2.0",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "devDependencies": {
    "@hdml/buffer": "0.0.2-alpha.5"
  },
  "dependencies": {
    "@hdml/schemas": "0.0.2-alpha.5",
    "@hdml/types": "0.0.2-alpha.5"
  },
  "scripts": {
    "clear": "rm -rf bin && rm -rf tst && rm -rf cjs && rm -rf coverage && rm -rf docs && rm -rf dts && rm -rf esm && rm -rf tsconfig/*.tsbuildinfo",
    "docs": "../../node_modules/.bin/typedoc ./src/index.ts --tsconfig ./tsconfig/cjs.json --out ./docs --includes ./",
    "lint": "node ../../node_modules/.bin/eslint -c ../../.eslintrc.js --fix --parser-options=tsconfigRootDir:'./tsconfig' 'src/**/*.ts'",
    "test": "npm run compile_tst && ../../node_modules/.bin/jest --config ../../.jestrc.js --roots ./packages/stringifier/tst --coverageDirectory ./packages/stringifier/coverage",
    "build": "npm run clear && npm run lint && npm run test -- --coverage && npm run compile_all && npm run docs",
    "compile_cjs": "tsc -b ./tsconfig/cjs.json",
    "compile_esm": "tsc -b ./tsconfig/esm.json",
    "compile_dts": "tsc -b ./tsconfig/dts.json",
    "compile_bin": "../../node_modules/.bin/esbuild ./esm/index.js --bundle --minify --format=iife --sourcemap --outfile=./bin/index.min.js",
    "compile_tst": "tsc -b ./tsconfig/tst.json",
    "compile_all": "npm run compile_cjs && npm run compile_esm && npm run compile_dts && npm run compile_bin",
    "srv": "../../node_modules/.bin/web-dev-server --config ../../.srv.js --open index.html"
  },
  "types": "dts/index.d.ts",
  "module": "esm/index.js",
  "main": "cjs/index.js"
}